{
	"name": "mediawiki/blue-spice-upgrade-helper",
	"license": "GPL-2.0+",
	"type": "mediawiki-extension",
	"homepage": "https://www.bluespice.com",
	"authors": [
		{
			"name": "Leonid Verhovskij",
			"email": "verhovskij@hallowelt.com",
			"homepage": "http://www.hallowelt.com"
		}
	],
	"require": {
		"composer/installers": "*",
		"lcobucci/jwt": "^3.2"
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"mediawiki/mediawiki-codesniffer": "13.0.0",
		"jakub-onderka/php-console-highlighter": "0.3.2"
	},
	"autoload": {
		"psr-4": {
			"MediaWiki\\Extension\\BlueSpiceUpgradeHelper\\": "src/"
		}
	},
	"scripts": {
		"fix": "phpcbf",
		"test": [
			"parallel-lint . --exclude vendor",
			"phpcs -p -s"
		]
	}
}
